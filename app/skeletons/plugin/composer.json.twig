{
    "name": "{{ name }}",
    "type": "spress-plugin",
    "description": "{{ description }}",
    "keywords": ["spress", "plugin"],
    "license": "{{ license }}",
{% if author and email %}
    "authors": [
        {
            "name": "{{ author }}",
            "email": "{{ email }}"
        }
    ],
{% endif %}
    "require": {
        "yosymfony/spress-installer": "~1.0"
    },
{% if namespace %}
    "autoload": {
        "psr-4": {
            "{{ namespace_psr4 }}": ""
        }
    },
{% endif %}
    "extra": {
        "spress_name": "{{ classname }}"
    }
}
