{
    "name": "{{ name }}",
    "type": "spress-plugin",
    "description": "{{ description }}",
    "keywords": ["spress", "plugin"],
    "license": "{{ license }}",
{% if author and email %}
    "authors": [
        {
            "name": "{{ author }}",
            "email": "{{ email }}"
        }
    ],
{% endif %}
    "require": {
        "spress/spress-installer": "2.0.*"
    },
{% if namespace %}
    "autoload": {
        "psr-4": {
            "{{ namespace_psr4 }}": ""
        }
    },
    "extra": {
        "spress_class": "{{ namespace }}\\{{ classname }}"
    }
{% endif %}
}
